---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact - ByteLab">
	<section class="pt-100 ct-04 inner-page-hero content-section division">
		<div class="container">
			<!-- SECTION CONTENT (ROW) -->
			<div class="row d-flex align-items-center">
				<!-- TEXT BLOCK -->
				<div class="col-md-6 order-last order-md-2">
					<div class="txt-block left-column wow fadeInRight">
						<!-- CONTENT BOX #1 -->
						<h5 class="s-24 w-700 mb-20">
							For any inquiries or assistance, please feel free to
							reach out to us using the following contact details
						</h5>

						<p>
							<b>Email:</b><a
								target="_blank"
								href="mailto:info@bytelab.ai">info@bytelab.ai</a
							>

							<address>
								<b>Address:</b> ByteLab, G-Star, Sagar Royal Villas,
								near Ashima Mall, Bhopal, Madhya Pradesh 462026
							</address>

							<b>Phone:</b>
							<a target="_blank" href="tel:+919893844539"
								>+91-989-384-4539</a
							> , <a target="_blank" href="tel:+919893370027"
								>+91-989-337-0027</a
							>
						</p>
						<br />
						<br />
						<p>
							Drop us a message on WhatsApp : <a
								aria-label=" WhatsApp Message"
								target="_blank"
								href="https://wa.me/9893844539"
							>
								<img
									alt="Chat on WhatsApp"
									src="/images/WhatsAppButtonGreenSmall.svg"
								/></a
							>
						</p>
						<p>
							We look forward to hearing from you and providing
							the support you need.
						</p>
						<!-- END CONTENT BOX #3 -->
					</div>
				</div>
				<!-- END TEXT BLOCK -->

				<!-- IMAGE BLOCK -->
				<div class="col-md-6 order-first order-md-2">
					<div class="img-block wow fadeInLeft">
						<img
							class="img-fluid"
							src="/images/contact-us-amico.svg"
							alt="content-image"
						/>
					</div>
				</div>
			</div>
		</div>
		<!-- End container -->
	</section>
	<section class="pt-50 mb-50 ct-04 inner-page-hero content-section division">
		<div class="container">
			<!-- SECTION TITLE -->
			<div class="row justify-content-center">
				<div class="col-md-12">
					<iframe
						class="ld-gmap"
						data-plugin-map="true"
						data-plugin-options='{"style":"lightMonochrome","address":"ByteLab G-Star, Sagar Royal Villas, Shri Rameshwaram, Bagh Sewaniya, Bhopal, Madhya Pradesh 462026","map":{"zoom":14,"mapTypeId":"roadmap","fullscreenControl":true},"marker_option":"html","className":"map_marker"}'
						src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d14670.832010527854!2d77.4645091!3d23.180855!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x397c43ce80880a43%3A0x36c1d89f4c061957!2sBytelab!5e0!3m2!1sen!2sin!4v1682520777432!5m2!1sen!2sin"
						style="border: 0;width: 100%; height:20rem"
						allowfullscreen=""
						loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"></iframe>
				</div>
			</div>
			<!-- END SECTION CONTENT (ROW) -->
		</div>
		<!-- End container -->
	</section>
	<hr class="divider" />
</Layout>
