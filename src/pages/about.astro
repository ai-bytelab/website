---
import Layout from "../layouts/Layout.astro";
---

<Layout title="About - ByteLab">
	<!-- ABOUT-2
			============================================= -->
	<section id="about-2" class="rel inner-page-hero about-section division">
		<!-- ABOUT-2 TITLE -->
		<div class="container">
			<div class="row">
				<div class="col-md-11 col-lg-10 col-xl-9">
					<div class="about-2-title mb-60">
						<!-- Title -->
						<h2 class="s-52 w-700 mb-30">
							Future lies in the hands of those who dare to
							challenge the status quo.
						</h2>
					</div>
				</div>
			</div>
		</div>
		<!-- END ABOUT-2 TITLE -->

		<!-- ABOUT-2 IMAGES -->
		<div class="container-fluid">
			<div class="row">
				<!-- IMAGES-1 -->
				<div class="col-md-5">
					<div class="text-end">
						<!-- IMAGE-1 -->
						<div class="about-2-img a-2-1 r-12">
							<img
								class="img-fluid"
								src="images/a2-1.jpg"
								alt="about-image"
							/>
						</div>

						<!-- IMAGE-2 -->
						<div class="about-2-img a-2-2 r-12">
							<img
								class="img-fluid"
								src="images/a2-2.jpg"
								alt="about-image"
							/>
						</div>
					</div>
				</div>
				<!-- END IMAGES-1 -->

				<!-- IMAGES-2 -->
				<div class="col-md-7">
					<!-- IMAGE-3 -->
					<div class="about-2-img a-2-3 r-12">
						<img
							class="img-fluid"
							src="images/a2-3.jpg"
							alt="about-image"
						/>
					</div>

					<div class="row">
						<!-- TEXT -->
						<div class="col-md-7 col-lg-6">
							<div
								class="a2-txt bg--black-400 pattern-01 bg--fixed color--white r-12"
							>
								<!-- Icon -->
								<div class="a2-txt-quote ico-40 o-20">
									<span class="flaticon-quote"></span>
								</div>

								<!-- Text -->
								<p >
									Reshape the landscape of advanced technology
									and innovation, driving India towards a future
									of limitless possibilities.
								</p>

								<!-- Author -->
								<p class="a2-txt-author">
									- ByteLab
								</p>
							</div>
						</div>

						<!-- IMAGE-4 -->
						<div class="col-md-5 col-lg-6">
							<div class="about-2-img a-2-4 r-12">
								<img
									class="img-fluid"
									src="images/a2-4.jpg"
									alt="about-image"
								/>
							</div>
						</div>
					</div>
					<!-- End row -->
				</div>
				<!-- END IMAGES-2 -->
			</div>
			<!-- End row -->
		</div>
		<!-- END ABOUT-2 IMAGES -->
	</section>
	<!-- END ABOUT-2 -->

	<!-- ABOUT-3
			============================================= -->
	<div id="about-3" class="pt-100 about-section division">
		<div class="container">
			<div class="row">
				<!-- ABOUT-3 TEXT -->
				<div class="col-md-6">
					<div id="a3-1" class="txt-block">
						<!-- Title -->
						<h5 class="s-24 w-700 mb-20">Our Mission</h5>

						<!-- Text -->
						<p>
							At <b>ByteLab</b>, our mission is clear and concise:
							we strive to advance technology to the next level by
							conducting in-depth <b>research</b> and providing innovative
							discoveries as solutions to real-world problems.
						</p>
						<p>
							With a relentless commitment to pushing the
							boundaries of what is possible, we aim to <b
								>empower</b
							>
							businesses and society as a whole through our transformative
							approach.
						</p>
						<p>
							Through rigorous exploration and the application of
							cutting-edge <b>technologies</b>, we unlock new
							horizons, revolutionize industries, and shape a
							future where technology solves challenges and drives
							positive change.
						</p>
					</div>
				</div>
				<!-- END ABOUT-3 TEXT -->

				<!-- ABOUT-3 TEXT -->
				<div class="col-md-6">
					<div id="a3-2" class="txt-block">
						<!-- Title -->
						<h5 class="s-24 w-700 mb-20">We deliver results</h5>

						<!-- Text -->

						<p>
							<b>Tailored Solutions:</b> We understand that every business
							is unique, which is why we provide customized solutions
							tailored to your specific needs. Our approach is flexible
							and adaptable, ensuring that the solutions we deliver
							align perfectly with your requirements.
						</p>
						<p>
							<b>Scalable and Efficient Solutions:</b> Our focus is
							on providing scalable solutions that can grow with your
							business. We optimize our strategies to ensure efficiency
							and effectiveness, allowing you to achieve your goals
							without unnecessary complexities or bottlenecks.
						</p>
						<!-- Text -->
						<p class="mb-0">
							<b>Low-Cost Solution:</b> We are committed to offering
							cost-effective solutions without compromising on quality.
							Our expertise in leveraging technology and streamlining
							processes enables us to provide affordable solutions
							that deliver outstanding results within your budget.
						</p>
					</div>
				</div>
				<!-- END ABOUT-3 TEXT -->
			</div>
			<!-- End row -->
		</div>
		<!-- End container -->
	</div>
	<!-- END ABOUT-3 -->

	<!-- BOX CONTENT
			============================================= -->
	<section class="pt-100 ws-wrapper content-section">
		<div class="container">
			<div class="bc-1-wrapper bg--02 bg--fixed r-16">
				<div class="section-overlay">
					<div class="row d-flex align-items-center">
						<!-- TEXT BLOCK -->
						<div class="col-md-6 order-last order-md-2">
							<div class="txt-block left-column wow fadeInRight">
								<!-- Section ID -->
								<span class="section-id">Why Choose Us</span>

								<!-- Title -->
								<h2 class="s-46 w-700">
									With knowledge, skills & hard work
								</h2>

								<!-- Text -->
								<p>
									our team understands your requirements and
									prioritizes cost-efficiency without
									compromising on quality. With 7 years of
									expertise in AI research, specifically in
									natural language processing, and an 8-year
									track record in software development, we
									deliver tailored solutions that meet your
									unique needs. Trust us to drive success and
									maximize the potential of AI in your
									business.
								</p>
							</div>
						</div>
						<!-- END TEXT BLOCK -->

						<!-- IMAGE BLOCK -->
						<div class="col-md-6 order-first order-md-2">
							<div class="img-block right-column wow fadeInLeft">
								<img
									class="img-fluid"
									src="images/img-08.png"
									alt="content-image"
								/>
							</div>
						</div>
					</div>
					<!-- End row -->
				</div>
				<!-- End section overlay -->
			</div>
			<!-- End content wrapper -->
		</div>
		<!-- End container -->
	</section>
	<!-- END BOX CONTENT -->

	<!-- TEXT CONTENT
			============================================= -->
</Layout>
